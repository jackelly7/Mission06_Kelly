@model Movie
@{
    ViewData["Title"] = "Add Movie";
}
<h1>@ViewData["Title"]</h1>

<p>Add Movies Here!!!</p>

<form class="movie-form">
    <label asp-for="Title">Movie Title: </label>
    <input asp-for="Title" type="text" name="MovieTitle" required/>

    <label asp-for="Category">Category:</label>
    <select asp-for="Category" name="Category" id="Category" required>
        <option value="">Select Category...</option>
        <option value="Drama">Drama</option>
        <option value="Television">Television</option>
        <option value="Horror/Suspense">Horror/Suspense</option>
        <option value="Comedy">Comedy</option>
        <option value="Family">Family</option>
        <option value="Action/Adventure">Action/Adventure</option>
        <option value="Miscellaneous">Miscellaneous</option>
    </select>

    <label asp-for="Year">Year Released:</label>
    <select asp-for="Year" name="Year" required>
        <option value="">Select a Year</option>
        @for (int year = 2025; year >= 1900; year--)
        {
            <option value="@year">@year</option>
        }
    </select>

    <label asp-for="Director">Director Name:</label>
    <input asp-for="Director" type="text" name="DirectorName" required/>

    <label asp-for="Rating">Rating:</label>
    <select asp-for="Rating" type="text" name="Rating" required>
        <option value="">Select a Rating</option>
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select>

    <label asp-for="Edited">Was this the edited version? (Check if yes it was edited, Leave blank if none):</label>
    <input asp-for="Edited" type="checkbox" name="Edited" value="true"/>

    <label asp-for="LentTo">Who did you lend this movie to, if anyone? (Leave blank if none):</label>
    <input asp-for="LentTo" type="text" name="LentTo"/>

    <label asp-for="Notes">Notes (Leave blank if none):</label>
    <input asp-for="Notes" type="text" name="Notes" maxlength="25"/>
    
    <button type="submit" style="margin-top: 20px;">Submit</button>
</form>
